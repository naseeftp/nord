<%- include("../../views/partials/admin/header") %>


<style>
    :root {
        --bg-dark: white;
        --bg-darker: #1e293b;
        --text-primary: #e2e8f0;
        --text-secondary: #94a3b8;
        --border-color: #334155;
        --accent-blue: #0ea5e9;
        --status-processing: #06b6d4;
        --status-cancelled: #64748b;
    }

    body {
        background-color: var(--bg-dark);
        color: var(--text-primary);
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    .orders-container {
        padding: 2rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0;
    }

    .search-container {
        position: relative;
        width: 300px;
    }

    .search-input {
        width: 100%;
        padding: 0.75rem 1rem;
        padding-right: 3rem;
        background-color: var(--bg-darker);
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        color: var(--text-primary);
    }

    .search-input:focus {
        outline: none;
        border-color: var(--accent-blue);
    }

    .search-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-secondary);
    }

    .orders-table {
        background-color: var(--bg-darker);
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
        color: var(--text-primary);
    }

    .table th {
        background-color: var(--bg-dark);
        color: var(--text-secondary);
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.875rem;
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
    }

    .table td {
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
        vertical-align: middle;
    }

    .table tbody tr:last-child td {
        border-bottom: none;
    }

    .order-id {
        font-family: monospace;
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        display: inline-block;
    }

    .status-processing {
        background-color: rgba(6, 182, 212, 0.1);
        color: var(--status-processing);
    }

    .status-cancelled {
        background-color: rgba(100, 116, 139, 0.1);
        color: var(--status-cancelled);
    }

    .action-button {
        padding: 0.5rem 1rem;
        background-color: var(--bg-dark);
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        color: var(--text-primary);
        text-decoration: none;
        font-size: 0.875rem;
        transition: all 0.2s;
    }

    .action-button:hover {
        background-color: var(--border-color);
        color: var(--text-primary);
    }

    .rupee-symbol::before {
        content: 'â‚¹';
        margin-right: 0.25rem;
    }

    .pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 2rem;
}

.page-link {
    padding: 0.5rem 1rem;
    background-color: #f1f1f1;
    border: 1px solid #ddd;
    border-radius: 4px;
    color: #333;
    text-decoration: none;
    transition: all 0.3s ease;
}

.page-link:hover {
    background-color: #0ea5e9;
    color: white;
}

.page-link.active {
    background-color: #0ea5e9;
    color: white;
    border-color: #0ea5e9;
}

.clear-search {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        padding: 0;
        display: none;
    }

    .clear-search:hover {
        color: var(--accent-blue);
    }
</style>


<body>
    <div class="orders-container">
        <div class="page-header">
            <h1 class="page-title" style="color: black;">Orders</h1>
            <div class="search-container">
                <form action="/admin/orderList" method="GET" id="searchForm">
                    <input type="text" name="search" class="search-input" placeholder="Search orders" value="<%= typeof search !== 'undefined' ? search : '' %>">
                    <button type="submit" style="display: none;"></button>
                    <svg class="search-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <button type="button" class="clear-search">
                        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>

        <div class="orders-table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>USER NAME</th>
                        <th>Date</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Payment Method</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(function(order) { %>
                        <tr>
                            <td class="order-id">#<%= order.orderId %></td>
                            <td><%= order.userId.name %></td>
                            <td><%= new Date(order.createdOn).toLocaleDateString('en-IN') %></td>
                            <td class="rupee-symbol"><%= order.totalPrice.toFixed(2) %></td>
                            <td>
                                <span class="status-badge status-<%= order.status.toLowerCase() %>">
                                    <%= order.status %>
                                </span>
                            </td>
                            <td><%= order.paymentMethod %></td>
                            <td>
                                <a href="/admin/orders/<%= order._id %>" class="action-button" style="color: black;">
                                    View
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
 
    <% if (totalPages > 1) { %>
        <div class="pagination">
            <% if (hasPreviousPage) { %>
                <a href="/admin/orderList?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>" class="page-link">Previous</a>
            <% } %>
            
            <% 
            let startPage = Math.max(1, currentPage - 1);
            let endPage = Math.min(totalPages, currentPage + 1);
            
            if (currentPage === 1) {
                endPage = Math.min(3, totalPages);
            }
            
            if (currentPage === totalPages) {
                startPage = Math.max(1, totalPages - 2);
            }
            %>
            
            <% for (let page = startPage; page <= endPage; page++) { %>
                <a href="/admin/orderList?page=<%= page %><%= search ? '&search=' + search : '' %>" class="page-link <%= currentPage === page ? 'active' : '' %>">
                    <%= page %>
                </a>
            <% } %>
            
            <% if (hasNextPage) { %>
                <a href="/admin/orderList?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>" class="page-link">Next</a>
            <% } %>
        </div>
    <% } %>

    <script>
        
        document.querySelector('.search-input').addEventListener('input', async function(e) {
            const searchTerm = e.target.value.trim();
            const response = await fetch(`/admin/orderList?search=${encodeURIComponent(searchTerm)}`);
            const html = await response.text();
            document.querySelector('.orders-container').innerHTML = new DOMParser()
                .parseFromString(html, 'text/html')
                .querySelector('.orders-container').innerHTML;
        });
        clearButton.addEventListener('click', function() {
            searchInput.value = '';
            window.location.href = `/admin/orderList?page=<%= currentPage %>`;
        });

    </script>
</body>


