

<%- include("../../views/partials/user/header") %>

<style>
    /* Container and General Styling */
    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }
    
    /* Table Styling */
    .table {
        border-collapse: collapse;
        width: 100%;
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
    }
    
    .table thead {
        background: #f8f9fa;
    }
    
    .table th {
        padding: 15px;
        font-size: 16px;
        text-transform: uppercase;
        color: #333;
        border-bottom: 2px solid #ddd;
    }
    
    .table td {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        vertical-align: middle;
    }
    
    /* Product Image */
    .product-thumbnail img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 5px;
    }
    
    /* Product Name */
    .product-name a {
        text-decoration: none;
        color: #333;
        font-weight: 600;
        font-size: 16px;
    }
    
    .product-name p {
        color: #777;
        font-size: 14px;
    }
    
    /* Price Section */
    .price {
        font-size: 16px;
        font-weight: 600;
        color: #29292B;  /* Jet Black */
    }
    
    /* Quantity Controls */
    .quantity-control {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }
    
    .quantity-input {
        width: 40px;
        height: 30px;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    
    .increment-button,
    .decrement-button {
        border: none;
        background: #29292B;  /* Jet Black */
        color: white;
        padding: 5px 10px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
    }
    
    .increment-button:hover,
    .decrement-button:hover {
        background: #3d3d3f;  
    }
    
  
    .action a {
        color: #C9C7BA; 
        font-size: 18px;
    }
    
    .action a:hover {
        color: #b5b3a4; 
    }

    .cart-totals {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }
    
    .cart-totals h4 {
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }
    
    .cart_total_amount {
        font-size: 16px;
        font-weight: bold;
        color: #29292B;  
    }
    
   
    .btn {
        background: #29292B; 
        color: white;
        padding: 12px;
        border-radius: 5px;
        font-size: 16px;
        display: block;
        text-align: center;
        margin-top: 15px;
        text-decoration: none;
    }
    
    .btn:hover {
        background: #3d3d3f;  /* Slightly lighter Jet Black */
    }
    
    .cart-empty {
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }
    
    .cart-empty a {
        text-decoration: none;
        color: #29292B;  
        font-size: 16px;
    }

    .pagination {
  margin: 20px 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
}

.pagination a, .pagination span {
  padding: 8px 16px;
  text-decoration: none;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pagination a.btn {
  background: #29292B;
  color: white;
  font-size: 14px;
  padding: 6px 12px;
  margin-top: 4px;
}

.pagination a.page-link {
  background: #f8f9fa;
  color: #333;
  border: 1px solid #ddd;
  height: 36px;
  width: 36px;
  padding: 0;
}

.pagination span.current-page {
  background: #C9C7BA;
  color: #29292B;
  border: 1px solid #C9C7BA;
  height: 36px;
  width: 36px;
  padding: 0;
}

.pagination a:hover:not(.current-page) {
  background: #3d3d3f;
  color: white;
}
</style>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Your Cart
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-9">
                        <% if (cart.items.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">size</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                        <% cart.items.forEach(item => { %>
                                            <tr>
                                                <td class="image product-thumbnail">
                                                    <img src="/uploads/re-image/<%= item.productId.productImage[0] %>" alt="#" />
                                                </td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name">
                                                        <a href="cart"><%= item.productId.productName %></a>
                                                    </h5>
                                                </td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name">
                                                        <%= item.selectedSize %>
                                                    </h5>
                                                </td>

                                                <td class="price" data-title="Price">₹<span>
                                                    <text id="subTotal<%= item._id %>">
                                                   <%= item.productId.salePrice * item.quantity %>
                                                 

                                                    </text><br>
                                                    <small class="text-muted text-nowrap">₹<span id="price">
                                                        <%= item.productId.salePrice %>
                                                    </span> / per item </small>
                                                </td>
                                                <td class="text-center" data-title="Stock">
                                                    <div class="detail-qty border radius m-auto">
                                                        <div class="quantity-control">
                                                           
                                                                            <button class="btn btn-sm decrement-button"
                                                                            onclick="changeQuantity('<%= item._id %>', '<%= item.quantity %>', -1, '<%= item.productId.salePrice %>', '<%= item._id %>','<%=item.selectedSize%>')">-
                                                                        </button>

                                                                      
                                                                        <input class="quantity-input"
                                                                            id="cartProductQuantity<%= item._id %>"
                                                                            value="<%= item.quantity %>"
                                                                            style="width: 45px;" type="text" readonly>

                                                                     
                                                                        <button class="btn btn-sm increment-button"
                                                                            onclick="changeQuantity('<%= item._id %>', '<%= item.quantity %>', 1, '<%= item.productId.salePrice %>', '<%= item._id %>','<%=item.selectedSize%>')">+
                                                                        </button>
                                                           


                                                            </div>
                                                    </div>
                                                </td>
                                                <td class="action" data-title="Remove">
                                                    <a class="btn btn-sm" href="#" onclick="confirmRemove('<%= item._id %>')">
                                                        <i class="fi-rs-trash"></i>
                                                        <span style="color: white;">Remove</span>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <!-- When cart is empty -->
                                        <tr>
                                            <td colspan="5" class="cart-empty">
                                                <p>No items found in Cart</p>
                                                <a href="/shop" class="btn btn-primary">Start Shopping</a>
                                            </td>
                                        </tr>
                                    <% } %>
                                    <input type="hidden" name="" id="totalabc" value="">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <% if (cart.items.length > 0) { %> 
                    <div class="col-3">
                        <div class="border p-md-4 p-30 border-radius cart-totals">
                            <div class="heading_s1 mb-3">
                                <h4>PRICE DETAILS</h4>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td class="cart_total_label">Shipping</td>
                                            <td class="cart_total_amount"><i class="ti-gift mr-5"></i> Free Shipping</td>
                                        </tr>
                                        <tr>
                                            <td class="cart_total_label">Total</td>
                                            <td class="cart_total_amount">
                                                <span class="font-lg fw-900 text-brand">₹
                                                    <text id="total"><%= totalPrice %></text>
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <a href="/checkout?userId=<%= user._id %>" class="btn">
                                <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut
                            </a>
                        </div>
                    </div>
                    <% } %>

                </div>
            </div>
            <% if (totalPages > 1) { %>
                <div class="pagination">
                  <% if (currentPage > 1) { %>
                    <a href="/cart?page=<%= currentPage - 1 %>" class="btn">Previous</a>
                  <% } %>
                
                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <% if (i === currentPage) { %>
                      <span class="current-page"><%= i %></span>
                    <% } else { %>
                      <a href="/cart?page=<%= i %>" class="page-link"><%= i %></a>
                    <% } %>
                  <% } %>
                
                  <% if (currentPage < totalPages) { %>
                    <a href="/cart?page=<%= currentPage + 1 %>" class="btn">Next</a>
                  <% } %>
                </div>
                <% } %>
        </section>
</main>
   

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  

  function changeQuantity(productId, cartQuantity, count, productPrice, i, selectedSize) {
    console.log('arguments of the function: ', arguments);

    const cartProductQuantityElement = document.querySelector(`#cartProductQuantity${i}`);
    const subtotalElement = document.querySelector(`#subTotal${i}`);
    const totalElement = document.getElementById('total');

    let currentQuantity = parseInt(cartProductQuantityElement.value);
    const currentSubTotal = parseInt(subtotalElement.innerHTML);

    if (currentQuantity + count > 10) {
        Swal.fire({
            title: 'Limit Exceeded!',
            text: 'You can only add up to 10 items to your cart.',
            icon: 'error',
            timer: 1000
        });
        return;
    }

    const newQuantity = currentQuantity + count;

    if (!selectedSize) {
        Swal.fire({
            icon: 'warning',
            title: 'Size Required',
            text: 'Please select a size before adding the product to the cart.',
            timer: 1000,
            showConfirmButton: false
        });
        return; 
    }

    if (count === -1 && newQuantity < 1) {
        Swal.fire({
            icon: "error",
            title: 'Stock Alert ⚠️',
            text: 'Quantity must be at least 1 to proceed.',
            timer: 1000,
            showConfirmButton: false,
            background: '#fff',
            color: '#D9534F',
            customClass: {
                popup: 'rounded-xl shadow-lg'
            }
        });
        return;
    }

    const newSubtotal = newQuantity * productPrice;

    $.ajax({
   url: '/changeQuantity',
   method: 'POST',
   data: {
       productId: productId,
       quantity: newQuantity,
       count: count,
       selectedSize: selectedSize
   },
   success: (response) => {
       console.log('response from backend:', response);
        if (response.message === false) {
            Swal.fire({
                icon: 'error',
                title: 'Stock Alert ⚠️',
                text: response.message,  
                timer: 1000
            });
            return; 
        }

       cartProductQuantityElement.value = newQuantity;
       subtotalElement.innerHTML = newSubtotal;

    
       let grandTotal = 0;
       response.updatedCart.items.forEach((item) => {
           grandTotal += item.quantity * item.productId.salePrice;
       });

       totalElement.innerHTML = grandTotal;
   },
   error: (error) => {
       console.log('Error while changing the quantity:', error.responseJSON.message);
       Swal.fire({
           icon: 'error',
           title: 'Error',
           text: error.responseJSON.message || 'Failed to update cart. Please try again.',
           timer: 1000
       });
   }
});

}

    function confirmRemove(productId) {
  Swal.fire({
    title: 'Are you sure?',
    text: "You won't be able to revert this!",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, remove it!'
  }).then((result) => {
    if (result.isConfirmed) {
      window.location.href = `/deleteItem?id=${productId}`;
    }
  });
}

</script>
