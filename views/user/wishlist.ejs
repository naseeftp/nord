<%- include("../../views/partials/user/header") %>
<style>

.btn-sm {
    padding: 8px 12px;
    font-size: 14px;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
}

.btn-sm:hover {
    transform: scale(1.05);
}


.btn-sm.add-to-cart {
    background-color: #28a745; 
    color: white;
    border: none;
}

.btn-sm.add-to-cart:hover {
    background-color: #218838;
}


.btn-sm.remove-item {
    background-color: #dc3545; 
    color: white;
    border: none;
}

.btn-sm.remove-item:hover {
    background-color: #c82333;
}


.custom-btn {
    background-color: #007bff;
    border: none;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 8px;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
}

.custom-btn:hover {
    background-color: #0056b3; 
    box-shadow: 0 6px 15px rgba(0, 86, 179, 0.4);
    transform: translateY(-2px);
}

.custom-btn:active {
    transform: translateY(1px);
    box-shadow: 0 3px 8px rgba(0, 86, 179, 0.3);
}


.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    gap: 8px;
}


.pagination .btn {
    padding: 8px 16px;
    font-size: 14px;
    border-radius: 5px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    border: none;
    cursor: pointer;
}

.pagination .btn:hover {
    background-color: #0056b3;
}


.pagination .btn.active {
    background-color: #0056b3;
    font-weight: bold;
    border: 2px solid white;
}

.pagination .btn:disabled {
    background-color: #ccc;
    cursor: not-allowed;
}
</style>

<main class="main">
  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span> Shop
        <span></span> My Wishlist
      </div>
    </div>
  </div>

  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <% if (wishlist.length > 0) { %>
            <div class="table-responsive">
              <table class="table shopping-summery text-center clean">
                <thead>
                  <tr class="main-heading">
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Add to Cart</th>
                    <th scope="col">Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let product of wishlist) { %>
                    <tr>
                      <td class="image product-thumbnail">
                        <img src="/uploads/re-image/<%= product.productImage[0] %>" 
                             style="width: 80px; height: 80px; object-fit: cover;" />
                      </td>
                      <td class="product-des product-name">
                        <h5 class="product-name">
                          <a href="#"><%= product.productName %></a>
                        </h5>
                        <p class="font-xs"><%= product.brand %></p>
                      </td>
                      <td class="price" data-title="Price">
                        â‚¹<span><%= product.salePrice %></span>
                      </td>
                      <td class="text-center" data-title="Add to Cart">
                        <a href="#" onclick="showSizeModal('<%= product._id %>')" class="btn btn-sm add-to-cart">Add to Cart</a>
                      </td>                      
                      <td class="action" data-title="Remove">
                        <a class="btn btn-sm remove-item" href="#" 
                           onclick="confirmRemove('<%= product._id %>')">Remove</a>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          <% } else { %>
